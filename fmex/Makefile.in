	  LDR     = clang
      CC      = clang # ${FOPT}
      MATLAB = matlab
	  #LIB     = -L/usr/local/lib  -lgoto2 -lfftw3
      #LIB     = -L/usr/local/lib -lpthread -llapack_goto -lblas_goto -ldfftpack -lfftw3
